{
"compilerOptions": {
    "outDir": "build",
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2015","dom"],
    "allowJs": true,
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/*.ts",
        "spec/*.ts"
    ],
    "exclude": [
        "spec/helpers/*"
    ]
}
